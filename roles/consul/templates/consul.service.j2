# /usr/lib/systemd/system/consul.service
[Unit]
Description=Consul Agent
Wants=basic.target
After=basic.target network.target

[Service]
User=consul
Group=consul
ExecStart=/usr/local/sbin/consul agent -ui -config-dir /etc/consul
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always
RestartSec=42s
LimitNOFILE=131072

[Install]
WantedBy=multi-user.target
